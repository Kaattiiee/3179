{
	"schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 800,
	"height": 450,
	"title": "International travel estimates by country of residence (March 2024 - March 2025)",
	"projection": {"type": "equalEarth"},
	"layer" : [
	  {
		"data": {
		  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
		  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
		},
		"mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
	  },
	  {
		"data": {
		  "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
		  "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
		},
		"mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
	  },
	  {
		"data": {
		  "url": "https://raw.githubusercontent.com/Kaattiiee/3179/refs/heads/main/week%209%20homework/tourists%20country%20of%20residence.csv"
		},
		"mark": {"type": "circle"},
		"encoding": {
		  "longitude": {"field": "longitude", "type": "quantitative"},
		  "latitude": {"field": "latitude", "type": "quantitative"},
		  "size": {
			"field": "total_spend($M)",
			"type": "quantitative",
			"title": "total spend($M)"
		  },
		  "color": {
			"field": "number of tourists(000)",
			"type": "quantitative",
			"title": "Number of Tourists(000)",
			"scale": {"scheme": "reds"}
		  },
		  "tooltip": [
			{"field": "country", "type": "nominal", "title": "Country Name"},
			{"field": "number of tourists(000)", "type": "quantitative", "title": "number of tourists(000)"},
			{"field": "total_spend($M)", "type": "quantitative","title": "total spend($M)"}
		  ]
		}
	  }
	]
  }
