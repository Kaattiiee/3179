{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 450,
	"height": 225,
	"title": {
		"text": "Australian Tourists Departure By Region (Mar 2024 - Mar 2025)",
		"fontSize": 16,
		"dy": -20
	},
	"background": "rgb(247, 245, 245)", 
    "config": {
        "view": {
            "fill": "rgb(247, 245, 245)",
            "stroke": "transparent"
        }
    },
	"layer": [
		{
			"data": {
				"url": "https://kaattiiee.github.io/3179/assignment%202/datasets/out_region.csv"
			},
			"mark": {"type": "bar", "tooltip": true},
			"encoding": {
				"x": {
					"field": "region",
            		"type": "nominal",
					"sort": "-y",
					"title": "region"
				},
        		"y": {
            		"field": "Total(000)",
            		"type": "quantitative",
					"title": "Total number of departure tourists (000)"
				},
        		"tooltip": [
            		{"field": "region", "type": "nominal"},
            		{"field": "Total(000)", "type": "quantitative", "format": ",.2f",
						"title": "total number of departures (000)"}
        		]
			}
		},
		{
			"data": {
					"url": "https://kaattiiee.github.io/3179/assignment%202/datasets/out_region.csv"
			  },
			  "transform": [
				{"filter": "datum.region == 'NSW'"}
			  ],
			"mark": {
			  "type": "text",
			  "text": "NSW & VIC: largest population & most departures",
			  "align": "center",
			  "dx": 180,
			  "dy": -80,
			  "fontSize": 11,
			  "fontWeight": "bold"
			},
			"encoding": {
			"x": {"datum": 20000}, 
			"y": {"datum": 5800} 
			  }
		  }
	]
	
}