{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"background": "rgb(247, 245, 245)",
	"title": {
		"text": "Total Arrivial and Departure of Tourists (Jul 2017 - Jul 2025)",
		"fontSize": 14
	},
  	"config": {
    	"view": {
      		"fill": "rgb(247, 245, 245)",
      		"stroke": "transparent"
    	}
	},
	"description": "Annual total arrivals and departures with highest and lowest points annotated",
	"width": 600,
	"height": 300,
	"layer": [
	{
	"data": { "url": "https://kaattiiee.github.io/3179/assignment%202/datasets/total_no_arrival_depart.csv" },
	"mark": "line",
	"encoding": {
		"x": {
			"field": "year",
			"type": "ordinal",
			"title": "Year",
			"axis": {"labelAngle": 0}
		},
		"y": {
			"field": "total_tourists",
			"type": "quantitative",
			"title": "Total number of tourists"
		},
		"color": {
			"field": "travel_type",
			"type": "nominal",
			"title": "Travel Type"
		},
		"tooltip": [
			{"field": "travel_type", "type": "nominal", "title": "travel type"},
			{"field": "year", "type": "ordinal"},
			{"field": "total_tourists", "type": "quantitative", "format": ",.2f",
				"title": "total number of tourists"}
		]
	}
},
{
	"data": {
	  "url": "https://kaattiiee.github.io/3179/assignment%202/datasets/total_no_arrival_depart.csv"
	},
	"transform": [
	  {"filter": "datum.year == '2021'"}
	],
	"mark": {
	  "type": "text",
	  "text": "COVID-19 pandemic: international travel restrictions",
	  "align": "left",
	  "dx": 30,
	  "dy": -20,
	  "fontSize": 11
	},
	"encoding": {
	  "x": {"field": "year", "type": "ordinal"},
	  "y": {"field": "total_tourists", "type": "quantitative"}
	}
  }
	]
}