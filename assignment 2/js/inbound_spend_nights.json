{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": {
	  "text": "Tourist Spending VS Nights Travelled (Mar 2024 - Mar 2025)",
	  "fontSize": 16,
	  "dy": -25
	},
	"background": "rgb(247, 245, 245)",
	"config": {
	  "view": {
		"fill": "rgb(247, 245, 245)",
		"stroke": "transparent"
	  }
	},
	"width": 375,
	"height": 250,
	"layer": [
	  {
		"data": {
		  "url": "https://kaattiiee.github.io/3179/assignment%202/datasets/in_spend_nights.csv"
		},
		"mark": {"type": "circle", "tooltip": true},
		"encoding": {
		  "x": {
			"field": "nights_travelled_k",
			"type": "quantitative",
			"title": "Nights Travelled (000)",
			"axis": {"grid": false}
		  },
		  "y": {
			"field": "total_spend_in_Australia_M",
			"type": "quantitative",
			"title": "Total Spend in Australia ($M)",
			"axis": {"grid": false}
		  },
		  "size": {
			"field": "number_trips_k",
			"type": "quantitative",
			"title": "Number of Trips (000)"
		  },
		  "tooltip": [
			{"field": "country", "type": "nominal"},
			{
			  "field": "number_trips_k",
			  "type": "quantitative",
			  "format": ",.2f",
			  "title": "number of trips (000)"
			},
			{
			  "field": "nights_travelled_k",
			  "type": "quantitative",
			  "format": ",.2f",
			  "title": "number of nights travelled (000)"
			},
			{
			  "field": "total_spend_in_Australia_M",
			  "type": "quantitative",
			  "format": ",.2f",
			  "title": "total spend in Australia ($M)"
			}
		  ]
		}
	  },
	  {
		"data": {
       	 	"url": "https://kaattiiee.github.io/3179/assignment%202/datasets/in_spend_nights.csv"
      	},
      	"transform": [
        	{"filter": "datum.country == 'China'"}
      	],
		"mark": {
		  "type": "text",
		  "text": "China: highest spending & longest travels",
		  "align": "center",
		  "dx": 20,
		  "dy": -20,
		  "fontSize": 11,
		  "fontWeight": "bold"
		},
		"encoding": {
        "x": {"datum": 20000}, 
        "y": {"datum": 5800} 
      	}
	  }
	]
  }
  